page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #faf8ef;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  color: #776e65;
}

.scores {
  display: flex;
}

.score-box {
  background: #bbada0;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
  text-align: center;
  min-width: 120rpx;
}

.score-box text {
  color: #eee4da;
  font-size: 28rpx;
  display: block;
}

.score {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.game-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  color: #776e65;
  font-size: 28rpx;
  margin-bottom: 50rpx;  
}

.restart-btn {
  background: #8f7a66;
  color: white;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border: none;
}

.game-board {
  /*解决棋盘位置不够居中的办法*/
  width: calc(160rpx * 4); /* 140rpx方块 + 20rpx间距 */
  height: calc(160rpx * 4);
  background: #bbada0;
  border-radius: 12rpx;
  position: relative;
}

.grid-container { 
  display: flex;
  flex-wrap: wrap;
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.cell {
  width: 140rpx;
  height: 140rpx;
  margin: 10rpx;
  background: rgba(238, 228, 218, 0.35);
  border-radius: 6rpx;
}

.tiles-container {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
}

.tile {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
  margin: 10rpx;
  font-size: 50rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.15s ease;
  transform-origin: center;
}

.tile-2 {
  background: #eee4da;
  color: #776e65;
}

.tile-4 {
  background: #ede0c8;
  color: #776e65;
}

.tile-8 {
  background: #f2b179;
  color: white;
}

.tile-16 {
  background: #f59563;
  color: white;
}

.tile-32 {
  background: #f67c5f;
  color: white;
}

.tile-64 {
  background: #f65e3b;
  color: white;
}

.tile-128 {
  background: #edcf72;
  color: white;
  font-size: 40rpx;
}

.tile-256 {
  background: #edcc61;
  color: white;
  font-size: 40rpx;
}

.tile-512 {
  background: #edc850;
  color: white;
  font-size: 40rpx;
}

.tile-1024 {
  background: #edc53f;
  color: white;
  font-size: 35rpx;
}

.tile-2048 {
  background: #edc22e;
  color: white;
  font-size: 35rpx;
}
.tile-4096 {
  background: #3c3a32;
  color: white;
  font-size: 30rpx;
}

.tile-8192 {
  background: #3c3a32;
  color: white;
  font-size: 25rpx;
}

.tile-16384 {
  background: #3c3a32;
  color: white;
  font-size: 20rpx;
}

.tile-32768 {
  background: #3c3a32;
  color: white;
  font-size: 18rpx;
}

.tile-65536 {
  background: #3c3a32;
  color: white;
  font-size: 16rpx;
}

.tile-131072 {
  background: #3c3a32;
  color: white;
  font-size: 14rpx;
}

/* 通用的超高数字样式 */
.tile[class*="tile-"]:not(.tile-2):not(.tile-4):not(.tile-8):not(.tile-16):not(.tile-32):not(.tile-64):not(.tile-128):not(.tile-256):not(.tile-512):not(.tile-1024):not(.tile-2048):not(.tile-4096):not(.tile-8192):not(.tile-16384):not(.tile-32768):not(.tile-65536):not(.tile-131072) {
  background: #3c3a32;
  color: white;
  font-size: 12rpx;
}

.merged {
  animation: pop 0.2s ease;
}

.new {
  animation: appear 0.2s ease;
}

.game-over {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(238, 228, 218, 0.73);
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}

.game-over-content {
  background: rgba(143, 122, 102, 0.8);
  padding: 40rpx;
  border-radius: 12rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}